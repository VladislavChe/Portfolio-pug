mixin project(link, img, title, text)
  div.project
    a.project__link(href=link target='_blank')
      div.project__img
        img(src=img, alt="")
      div.project__text
        h3=title
        p=text
    
mixin card(number, title, text, link, img)
  .card
    .card__head  
      .card__number=number
      h4.card__title=title
    .card__body 
      .card__text=text
      a(target="_blank" href=link).card__img
        svg(xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' version='1.1' width='24' height='24' viewBox='0 0 24 24')
          path(d='M10,21V19H6.41L10.91,14.5L9.5,13.09L5,17.59V14H3V21H10M14.5,10.91L19,6.41V10H21V3H14V5H17.59L13.09,9.5L14.5,10.91Z')
        img(src=img) 