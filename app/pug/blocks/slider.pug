.slider
  .container
    h1.slider__title Slider
    .slider__slider-wrapper
      .slider__slide.slider__active(data-slide='1')
        img(src='../img/src/summer.jpg' alt='')
      .slider__slide(data-slide='2')
        img(src='../img/src/winter.jpg' alt='')
      .slider__slide(data-slide='3')
        img(src='../img/src/outumn.jpg' alt='')
      #slider__btn-prev
        .slider__prev
      #slider__btn-next
        .slider__next
    #slider__dots-wrapper.slider__dots-wrapper
      span.dot.active(data-dot='1')
      span.dot(data-dot='2')
      span.dot(data-dot='3')
